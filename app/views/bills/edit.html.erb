<h1>Editing bill</h1>

<% form_for(@bill) do |f| %>
  <%= f.error_messages %>
 <p>
    <%= f.label "Bezugsdatum"%><br />
    <%= f.date_select :datum %>
  </p>
  
  <p>
    <%= f.label "Rechnungsdatum"%><br />
    <%= f.date_select :rechnungsdatum %>
  </p>
  <p>
    <%= f.label :rechnungsnummer %><br />
    <%= f.text_field :rechnungsnummer %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @bill %> |
<%= link_to 'Back', new_bill_path(:patent=>@bill.patent.id) %>
